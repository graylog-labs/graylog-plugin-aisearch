<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>graylog</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <moduleSets>
        
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <includes>
                <include>org.graylog:distribution</include>
            </includes>
            <binaries>
            
                <attachmentClassifier>graylog-server-tarball</attachmentClassifier>
                <includeDependencies>false</includeDependencies>
                <unpack>true</unpack>
            
            </binaries>
        </moduleSet>
        
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <includes>
                <include>org.graylog.plugins:graylog-plugin-collector</include>
            </includes>
            <binaries>
            
                <includeDependencies>false</includeDependencies>
                <outputDirectory>plugin</outputDirectory>
                <unpack>false</unpack>
            
            </binaries>
        </moduleSet>
        
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <includes>
                <include>org.graylog.plugins:graylog-plugin-aws</include>
            </includes>
            <binaries>
            
                <includeDependencies>false</includeDependencies>
                <outputDirectory>plugin</outputDirectory>
                <unpack>false</unpack>
            
            </binaries>
        </moduleSet>
        
        <moduleSet>
            <includeSubModules>true</includeSubModules>
            <includes>
                <include>org.graylog.plugins:graylog-plugin-threatintel</include>
            </includes>
            <binaries>
            
                <includeDependencies>false</includeDependencies>
                <outputDirectory>plugin</outputDirectory>
                <unpack>false</unpack>
            
            </binaries>
        </moduleSet>
        
    </moduleSets>
</assembly>
